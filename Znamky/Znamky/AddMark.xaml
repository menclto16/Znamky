<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Znamky.AddMark">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Picker x:Name="SubjectPicker" Title="Select subject"/>
            <Picker x:Name="MarkPicker" Title="Select mark"/>
            <Picker x:Name="WeightPicker" Title="Select weight"/>
            <Entry x:Name="Comment" Completed="InsertMark" Placeholder="Comment..."></Entry>
            <Button Text="Add mark" Clicked="InsertMark"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>